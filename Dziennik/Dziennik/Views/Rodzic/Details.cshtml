@model dynamic
@{
    ViewBag.Title = "Details";
}
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <!--Informacje o rodzicu-->
    <h2>Rodzic</h2>
    <table class="table" align="center">
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
        </tr>
        @foreach (var rodzic in Model.Rodzic)
        {
            <tr>
                <td>@rodzic.ID</td>
                <td>@rodzic.imie</td>
                <td>@rodzic.nazwisko</td>

            </tr>
        }
    </table>

    <!--Informacje o dzieciach rodzica-->
    <h2>Dzieci rodzica (uczniowie)</h2>
    <table class="table" align="center">
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
        </tr>
        @foreach (var uczen in Model.Uczen)
        {
            <tr>
                <td>@uczen.ID</td>
                <td>@uczen.imie</td>
                <td>@uczen.nazwisko</td>

            </tr>
        }
    </table>
    <!--Informacje o ogloszeniach od nauczyciela-->
    <h2>Ogloszenia rodzica</h2>
    <table class="table" align="center">
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
        </tr>
        @foreach (var ogl in Model.Ogloszenie_dla_rodzicow)
        {
        <tr>
            <td>@ogl.ID</td>
            <td>@ogl.naglowek</td>
            <td>@ogl.tresc</td>
            <td>@ogl.data</td>
        </tr>
        }
    </table>

</body>
</html>