@using Dziennik.Models

@model IEnumerable<Dziennik.Models.Ocena>
@{
    ViewBag.Title = "Oceny";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>
    Oceny ucznia: @ViewBag.imie @ViewBag.nazwisko
</h2>

<br />





<table class="table">
    <tr>
        <th>
            Nauczyciel
        </th>
        <th>
            Przedmiot
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ocena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.waga)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th>
            Opis
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nauczyciel.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Przedmiot.nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ocena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.waga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tresc)
            </td>

        </tr>
    }

</table>


@using (Html.BeginForm("Oceny", "Rodzic", FormMethod.Get))
{

    <div class="form-group" align="center">
        <label for="sel1">Wybierz ucznia:</label>
        <select class="form-control" name="data" onchange="submit();" style="text-align-last:center;">
            <option value="">--Wybierz--</option>

            @foreach (var item in (List<Uczen>)ViewBag.dzieci)
            {


                <option value="@item.ID">@item.imie @item.nazwisko</option>


            }

</div>
}

<br />
