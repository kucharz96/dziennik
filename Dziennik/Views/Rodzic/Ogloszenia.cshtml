@model IEnumerable<Dziennik.Models.Ogloszenie_dla_rodzicow>

@{
    ViewBag.Title = "Ogloszenia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ogloszenia</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.klasa.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nauczyciel.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.naglowek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tresc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.klasa.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nauczyciel.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naglowek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tresc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data)
        </td>

        <td>
           
            @Html.ActionLink("Szczegóły", "Details","Ogloszenie_dla_rodzicow" ,new { id = item.ID },null) 
          
        </td>

    </tr>
}

</table>
