@using Dziennik.Models

@model Dziennik.Models.Zapytanie

@{
    ViewBag.Title = "DodawanieZapytania";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodawanie zapytania</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Zapytanie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NauczycielID, "Nauczyciel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <select class="form-control" name="data" style="text-align-last:center;">


                    @foreach (Nauczyciel nauczyciel in ViewBag.Nauczyciel)
                    {
                        <option value="@nauczyciel.NauczycielID">@nauczyciel.FullName</option>
                    }

                    @Html.ValidationMessageFor(model => model.NauczycielID, "", new { @class = "text-danger" })
</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pytanie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pytanie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pytanie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj zapytanie" class="btn btn-default" />
            </div>
        </div>
    </div>
}
