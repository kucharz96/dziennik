@model IEnumerable<Dziennik.Models.Spoznienie>

<p>
    @Html.ActionLink("Create New", "DodawanieSpoznienia")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LekcjaID)
        </th>
		<th>
            Przedmiot
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LekcjaID)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Lekcja.Przedmiot.nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.ActionLink("Edit", "EdytowanieSpoznienia", new { id = item.ID }) |
                @Html.ActionLink("Delete", "UsuwanieSpoznienia", new { id = item.ID })
            </td>
        </tr>
    }

</table>
