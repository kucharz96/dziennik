@model IEnumerable<Dziennik.Models.Klasa>

@{
    ViewBag.Title = "Klasy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Klasy</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Wychowawca.imie) wychowawcy

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wychowawca.nazwisko) wychowawcy
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.level)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Wychowawca.imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wychowawca.nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.level)
        </td>
        <td>
            @Html.ActionLink("Uczniowie", "ListaUczniow", new { id = item.KlasaID })
        </td>
    </tr>
    }

</table>

