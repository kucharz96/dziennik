@model Dziennik.Models.Zapytanie

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pytanie od rodzica</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Rodzic: @Html.DisplayFor(modelItem => Model.Rodzic.FullName)</h4>
    <hr />

    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.NauczycielID)
    @Html.HiddenFor(model => model.RodzicID)
    @Html.HiddenFor(model => model.pytanie)
    @Html.HiddenFor(model => model.data_pytania)

    <div class="form-group">
        @Html.LabelFor(model => model.pytanie, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.DisplayFor(modelItem => Model.pytanie)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.odpowiedz, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.TextAreaFor(model => Model.odpowiedz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.odpowiedz, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
